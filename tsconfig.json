{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": [
    "./src/**/*"
  ]
}
